# Application
APP_NAME=encurtador-url
APP_VERSION=0.1.0
APP_ENV=development
APP_PORT=8080
APP_HOST=localhost
LOG_LEVEL=info

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=encurtador

# Redis (rate limiting)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Shortener
SHORTENER_BASE_URL=http://localhost:8080
SLUG_LENGTH=6
REDIRECT_STATUS=302

# Security
# Comma-separated list. If empty, POST /api/links is open (MVP convenience).
API_KEYS=
# Comma-separated list of blocked destination domains (example: "example.com,bad.com")
BLOCKED_DOMAINS=
# Rate limit (contador por minuto) para POST /api/links (por API key; fallback por IP)
CREATE_RATE_LIMIT_PER_MINUTE=60

# OpenTelemetry (Jaeger)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
